<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/soulcontent_exlist_child_profinformation"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        />
    
    <LinearLayout
        android:id="@+id/soulcontent_exlist_child_navlayout" 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
        >
        <TextView
             android:id="@+id/soulcontent_exlist_child_visitpage"
             android:layout_width="0dip"
             android:layout_weight="0.5"
             android:layout_height="wrap_content"
            />
        <TextView
             android:id="@+id/soulcontent_exlist_child_writeMessage"
             android:layout_width="0dip"
             android:layout_weight="0.5"
             android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>
