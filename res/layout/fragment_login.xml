<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<TextView 
    android:id="@+id/welcome"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/login_message"
    	/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
<TextView 
    android:id="@+id/login_mail_label"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:text="@string/login_mail_label"
    android:layout_weight="0.3"
    />

<EditText
    android:id="@+id/login_mail"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:hint="@string/login_mail_hint"
    android:inputType="textEmailAddress"
    android:singleLine="true"
    android:layout_weight="0.7"
    />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
<TextView 
    android:id="@+id/login_password_label"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:text="@string/login_password_label"
    android:layout_weight="0.3"
    />

<EditText
    android:id="@+id/login_password"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:hint="@string/login_pass_hint"
    android:inputType="textPassword"
    android:singleLine="true"
    android:layout_weight="0.7"
    />
</LinearLayout>
<Button 
    android:id="@+id/login_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/login_button_text"
    />
<Button 
    android:id="@+id/login_regbutton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/login_regbutton_text"
    />
</LinearLayout>
