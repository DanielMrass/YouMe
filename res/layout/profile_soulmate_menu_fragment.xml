<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
	<ToggleButton
	android:id="@+id/profile_toggle_profile"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:textOn="@string/profile_toggle_profile_text"
    android:textOff="@string/profile_toggle_profile_text"
    />
	<ToggleButton
	android:id="@+id/profile_toggle_soulmate"
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:textOn="@string/profile_toggle_soulmate_text"
    android:textOff="@string/profile_toggle_soulmate_text"
    />
</LinearLayout>
