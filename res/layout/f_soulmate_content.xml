<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/soulcontent_find_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
    	<TextView
        android:id="@+id/soulmate_find_label"
        android:layout_width="0dip"
        android:layout_weight="0.2"
    	android:layout_height="wrap_content"
    	android:text="@string/soulmate_find_label"
        />    
        <EditText
            android:id="@+id/soulcontent_search_field"
        	android:layout_width="0dip"
        	android:layout_weight="0.65"
    		android:layout_height="wrap_content"
    		android:hint="@string/soulmate_search_hint"     
            />
        <ImageButton
             android:id="@+id/soulcontent_search_button"
             android:layout_width="0dip"
             android:layout_weight="0.15"
             android:layout_height="wrap_content"
             android:contentDescription="Lupe"
             android:src="@drawable/magnifying_glass"
            />	
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/soulcontent_exlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        ></ExpandableListView>
</LinearLayout>
