<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/soulcontent_exlist_child_profinformation"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
         />
    <ImageButton
         android:id="@+id/soulcontent_exlist_child_removesoulmate"
         android:layout_height="wrap_content"
         android:layout_width="0dip"
         android:layout_weight="0.1"
         android:src="@drawable/delete_icon_21"
        />
	</LinearLayout>
    <LinearLayout
        android:id="@+id/soulcontent_exlist_child_navlayout"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/soulcontent_exlist_child_visitpage"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="@color/special_black"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/soulcontent_exlist_child_writeMessage"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="@color/special_black"
            android:textSize="12sp"
             />
    </LinearLayout>
</LinearLayout>
